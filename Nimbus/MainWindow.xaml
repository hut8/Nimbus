<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Nimbus.MainWindow"
        Title="Nimbus" ResizeMode="CanResizeWithGrip" SizeToContent="WidthAndHeight" Height="134">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="URL" ToolTip="URL of thing" Text="https://soundcloud.com/majorlazer/major-lazer-dj-snake-lean-on-feat-mo" VerticalContentAlignment="Stretch" VerticalAlignment="Top"/>
        <Button Grid.Row="1" x:Name="Submit" Click="Submit_Click" Content="Submit"/>
        <ProgressBar Grid.Row="2" x:Name="Progress" />
    </Grid>
</Window>
